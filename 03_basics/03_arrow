const addTwo = (num1, num2) => ({username: "hitesh"}) // implicit return, no need for return keyword, but brackets are used to return an object


console.log(addTwo(3, 4))


const myArray = [2, 5, 3, 7, 8]

myArray.forEach(function () {})
myArray.forEach( () => {}) // forEach is a method of array, it takes a callback function as an argument so here we can use arrow function as a callback function

// this keyword is not used in arrow function as it does not have its own this, it takes this from the surrounding context (lexical this) ; so in above example, this will refer to global object (window in browser, {} in node environment) and not to the array or the function itself