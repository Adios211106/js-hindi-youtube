const user = {
    username: "hitesh",
    price: 999,

    welcomeMessage: function() {
        console.log(`${this.username} , welcome to website`); // this is used for current context (here, hitesh as it is global scope, but if we change the context, it will change the value of this)
        console.log(this);
    }

}

user.welcomeMessage()
user.username = "sam" // context changed
user.welcomeMessage()

// console.log(this); // in node environment, in this example there is no global object so output is {} ; in browser, global obj will be window object

